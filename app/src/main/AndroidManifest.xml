<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ecome">

        <!-- Launcher Activity -->
        <activity
            android:name="com.example.ecome.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity
            android:name="com.example.ecome.LoginActivity"
            android:exported="true" />

        <activity
            android:name="com.example.ecome.SignupActivity"
            android:exported="true" />

        <activity
            android:name="com.example.ecome.WelcomeActivity"
            android:exported="true" />

        <activity
            android:name="com.example.ecome.HomeActivity"
            android:exported="true" />

        <activity
            android:name="com.example.ecome.AddressActivity"
            android:exported="true" />
        <activity
            android:name="com.example.ecome.CartActivity"
            android:exported="true" />
        <activity
            android:name="com.example.ecome.AccountActivity"
            android:exported="true" />

        <activity
            android:name="com.example.ecome.CheckoutActivity"
            android:exported="true" />
        <activity
            android:name="com.example.ecome.OrderConfirmationActivity"
            android:exported="true" />

    </application>

</manifest>
